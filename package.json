{
    "name": "ts_scaffolding",
    "version": "1.0.0",
    "description": "",
    "main": "src/index.ts",
    "scripts": {
        "build": "tsc",
        "migrate:prod": "dotenv -e ./prisma/.env.db.prod-migrate prisma migrate deploy",
        "migrate:dev": "dotenv -e ./prisma/.env.db.dev -- prisma migrate dev",
        "start": "ENV_FILE=./config/.env.prod node -r tsconfig-paths/register ./dist/index.js",
        "dev": "ENV_FILE=./config/.env.dev dotenv -e ./prisma/.env.db.dev -- tsnd -r tsconfig-paths/register --respawn --transpile-only ./src/index.ts",
        "lint": "eslint . --ext ts",
        "test-docker:up": "docker compose -f docker-compose.test.yml up -d",
        "migrate:test": "dotenv -e ./prisma/.env.db.test prisma migrate dev --name init",
        "test:up": "yarn test-docker:up && yarn migrate:test",
        "test": "ENV_FILE=./config/.env.test dotenv -e ./prisma/.env.db.test jest",
        "test:down": "docker compose -f docker-compose.test.yml down"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^2.26.0",
        "@types/dotenv-parse-variables": "^2.0.0",
        "@types/morgan": "^1.9.2",
        "dotenv-cli": "^4.0.0",
        "dotenv-extended": "^2.9.0",
        "dotenv-parse-variables": "^2.0.0",
        "express": "^4.17.1",
        "morgan": "^1.10.0",
        "morgan-body": "^2.6.5",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.3.4",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.12",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.12.4",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^4.28.0",
        "@typescript-eslint/parser": "^4.28.0",
        "eslint": "^7.29.0",
        "jest": "^27.0.5",
        "jest-mock-extended": "^1.0.16",
        "prisma": "^2.26.0",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.0.0",
        "ts-node-dev": "^1.1.6"
    }
}
